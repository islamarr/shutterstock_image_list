<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.islam.shutterstock.ui.view.splash.SplashFragment"
        android:label="splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:popUpTo="@+id/navigation"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.islam.shutterstock.ui.view.home.HomeScreenFragment"
        android:label="home_screen_fragment"
        tools:layout="@layout/fragment_home_screen" />


</navigation>